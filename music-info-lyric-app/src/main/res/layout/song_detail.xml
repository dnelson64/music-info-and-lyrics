<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="biz.davidnelson.music.fragments.SongDetailFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_albumImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_artistName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_albumImage"
        android:layout_toRightOf="@+id/iv_albumImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_songName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_albumImage"
        android:layout_toRightOf="@+id/iv_albumImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_albumName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/iv_albumImage"
        android:layout_below="@id/tv_songName"/>
</RelativeLayout>
